#parse("/velocity/layout.vm")
#@mainLayout()
    #if($show)
    <h1><b>$show.showTitle</b></h1>
    <h2><b>Genre:</b> $show.genre</h2>
    <h2><b>Length:</b> $show.getLengthHour()h $show.getLengthMinute()m</h2>
    <h2><b>Series:</b> $show.series</h2>
    <h2><b>Released year:</b> $show.year</h2>
    <h2><b>Cast</b></h2>
    #foreach($credit in $show.credits_roll.keySet())
        <h2>$show.credits_roll.get($credit) --- $credit</h2>
    #end

    <div class="show">
        <div class="showCover">
            <img src="$show.Cover" alt="$show.showTitle">
        </div>
    </div>
    #else
    <h1>$msg.get("SHOWS_SHOW_NOT_FOUND")</h1>
    #end
#end
