#parse("/velocity/layout.vm")
#@mainLayout()
<h1>$msg.get("SHOWS_HEADING_ALL")</h1>
#if($deleteSucceded)
    <p class="bad notification">$msg.get("SHOWS_DELETED", $deletedShowTitle)</p>
#end
#if($user)
    #if($user.typeOfUser.equals("admin"))
    <form id="signinForm" method="get" action="/adminaddshow">
        <input type="submit" value="Add a movie">
    </form>
    #end
#end
<div class="row row-3">
    #foreach($show in $shows)
        <div class="col">
            <a class="show" href="/shows/$show.showID">
                <div class="showCover">
                    <img src="$show.Cover" alt="$show.showTitle">
                </div>
                $msg.get("SHOWS_CAPTION", $show.showTitle)
                <h2>$show.year</h2>
            </a>
        </div>
    #end
</div>
#end
