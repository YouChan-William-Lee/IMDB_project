#parse("/velocity/layout.vm")
#@mainLayout()
<h1>$msg.get("SHOWS_HEADING_ALL")</h1>
<div class="row row-3">
    #foreach($show in $shows)
        <div class="col">
            <a class="show" href="/shows/$show.showId">
                <div class="showCover">
                    <img src="$show.mediumCover" alt="$show.showTitle">
                </div>
                $msg.get("SHOWS_CAPTION", $show.showTitle)
                <h3>$show.year</h3>
            </a>
        </div>
    #end
</div>
#end
